<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p2"
        android:layout_below="@id/player_1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p3"
        android:layout_below="@id/player_2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p4"
        android:layout_below="@id/player_3"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p5"
        android:layout_below="@id/player_4"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p6"
        android:layout_below="@id/player_5"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p8"
        android:layout_below="@id/player_7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p9"
        android:layout_below="@id/player_8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p10"
        android:layout_below="@id/player_9"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p11"
        android:layout_below="@id/player_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/player_12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/p12"
        android:layout_below="@id/player_11"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_oval="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="чбошод"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>